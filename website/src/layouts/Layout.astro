---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Proactive technology mentor for Claude Code. 10 knowledge domains. 14 hooks. 8 commands." } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/assets/brand-mockup.jpg" />
    <meta property="og:type" content="website" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-void text-paper grain">

    <!-- Nav -->
    <nav class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-void/80 border-b border-white/[0.06]">
      <div class="max-w-7xl mx-auto px-6 h-14 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 font-mono font-bold text-sm tracking-tight hover:text-vermillion transition-colors">
          claudia
          <img
            id="claudia-hang"
            src="/assets/claudia-mascot.png"
            alt=""
            width="36"
            height="36"
            class="w-9 h-9 object-contain opacity-0 transition-all duration-500"
            loading="eager"
          />
        </a>
        <div class="flex items-center gap-6">
          <a href="/start" class="text-xs text-paper/50 hover:text-paper transition-colors">Start</a>
          <a href="/docs" class="text-xs text-paper/50 hover:text-paper transition-colors">Docs</a>
          <a href="/contribute" class="text-xs text-paper/50 hover:text-paper transition-colors">Contribute</a>
          <a
            href="https://github.com/reganomalley/claudia"
            target="_blank"
            rel="noopener noreferrer"
            class="text-paper/50 hover:text-paper transition-colors"
            aria-label="GitHub"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
          </a>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-white/[0.06] mt-32">
      <div class="max-w-7xl mx-auto px-6 py-16">
        <div class="grid sm:grid-cols-3 gap-12">
          <div>
            <span class="font-mono font-bold text-sm">claudia</span>
            <p class="mt-3 text-xs text-paper/40 leading-relaxed max-w-xs">
              The mentor in your terminal. Open source, opinionated, always watching.
            </p>
          </div>
          <div>
            <h4 class="text-xs font-semibold text-paper/30 uppercase tracking-widest mb-4">Links</h4>
            <div class="space-y-2.5">
              <a href="/start" class="block text-sm text-paper/50 hover:text-paper transition-colors">Start here</a>
              <a href="/docs" class="block text-sm text-paper/50 hover:text-paper transition-colors">Documentation</a>
              <a href="/contribute" class="block text-sm text-paper/50 hover:text-paper transition-colors">Contribute</a>
              <a href="/shortcuts" class="block text-sm text-paper/50 hover:text-paper transition-colors">Shortcuts</a>
              <a href="https://github.com/reganomalley/claudia" target="_blank" rel="noopener noreferrer" class="block text-sm text-paper/50 hover:text-paper transition-colors">GitHub</a>
              <a href="https://www.npmjs.com/package/claudia-mentor" target="_blank" rel="noopener noreferrer" class="block text-sm text-paper/50 hover:text-paper transition-colors">npm</a>
            </div>
          </div>
          <div>
            <h4 class="text-xs font-semibold text-paper/30 uppercase tracking-widest mb-4">Project</h4>
            <div class="space-y-2.5">
              <span class="block text-sm text-paper/50">MIT License</span>
              <a href="https://x.com/0xthegipper" target="_blank" rel="noopener noreferrer" class="block text-sm text-paper/50 hover:text-paper transition-colors">built by regan</a>
              <span class="flex items-center gap-1.5 text-sm text-paper/30 mt-1">
                <svg class="w-3 h-3 text-[#da7756]" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l2.09 6.26L20.18 9.27l-5.09 3.71L16.18 19.27 12 16l-4.18 3.27 1.09-6.29L3.82 9.27l6.09-1.01z"/></svg>
                Built for Claude Code
              </span>
            </div>
          </div>
        </div>
        <div class="mt-16 pt-6 border-t border-white/[0.04] text-xs text-paper/20">
          Every Claude needs a Claudia.
        </div>
      </div>
    </footer>

    <!-- Scroll reveal observer + Claudia peek -->
    <script>
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("visible");
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.1, rootMargin: "0px 0px -40px 0px" }
      );

      document.querySelectorAll(".reveal").forEach((el) => observer.observe(el));

      // Claudia in nav: fades in after scrolling past hero
      const hang = document.getElementById("claudia-hang");
      if (hang) {
        let visible = false;
        const checkScroll = () => {
          const pastHero = window.scrollY > window.innerHeight * 0.4;
          if (pastHero && !visible) {
            visible = true;
            hang.style.opacity = "1";
          } else if (!pastHero && visible) {
            visible = false;
            hang.style.opacity = "0";
          }
        };
        window.addEventListener("scroll", checkScroll, { passive: true });
      }
    </script>
  </body>
</html>
