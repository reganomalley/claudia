---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Claudia - proactive technology mentor for Claude Code" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Claudia - proactive technology mentor for Claude Code" />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:type" content="website" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-void text-paper">
    <slot />

    <footer class="border-t border-soft-gray py-8 mt-auto">
      <div class="max-w-5xl mx-auto px-6 flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-paper/50">
        <span>Built by Regan O'Malley</span>
        <div class="flex items-center gap-6">
          <a
            href="https://github.com/reganomalley/claudia"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-paper transition-colors"
          >
            GitHub
          </a>
          <a
            href="https://www.npmjs.com/package/claudia"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-paper transition-colors"
          >
            npm
          </a>
          <span>MIT License</span>
        </div>
      </div>
    </footer>
  </body>
</html>
