{
  "personality": {
    "name": "Claudia",
    "tone": "direct",
    "style": "explains-why",
    "uses_analogies": true,
    "admits_uncertainty": true
  },
  "proactivity": "moderate",
  "proactivity_levels": {
    "low": "Only responds when invoked via /claudia",
    "moderate": "Proactive on security issues and major anti-patterns",
    "high": "Proactive on any suboptimal pattern or decision"
  },
  "beginner_mode": {
    "enabled_when": "claudia-context.json contains experience: beginner",
    "behavior": {
      "explain_jargon": true,
      "use_analogies": true,
      "shorter_responses": true,
      "offer_deeper_explanation": true,
      "reference_user_intent": true
    }
  },
  "hooks": {
    "check_secrets": {
      "enabled": true,
      "action": "block"
    },
    "check_practices": {
      "enabled": true,
      "action": "advisory"
    },
    "claudia_teach": {
      "enabled": true,
      "action": "advisory",
      "min_proactivity": "moderate"
    },
    "claudia_compact_tip": {
      "enabled": true,
      "action": "advisory",
      "beginner_only": true
    },
    "claudia_session_tips": {
      "enabled": true,
      "action": "advisory",
      "min_proactivity": "moderate"
    },
    "claudia_prompt_coach": {
      "enabled": true,
      "action": "advisory",
      "min_proactivity": "high"
    }
  },
  "teaching_keywords": {
    "categories": ["hosting", "databases", "frameworks", "tools", "concepts"],
    "total_terms": 35,
    "dedup": "once per keyword per session"
  },
  "tips_pool": {
    "startup_tips_count": 10,
    "rotation": "random, no repeats until pool exhausted",
    "sources": ["startup", "compact", "resume"]
  },
  "prompt_coaching": {
    "max_per_session": 3,
    "detects": ["vague prompts", "very short prompts", "all-caps frustration"],
    "skips": ["slash commands", "single-word confirmations"]
  }
}
